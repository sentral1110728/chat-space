.wrapper
  = render 'shared/left-content'
  .right-content
    .group-title
      %p.group-name sample
      %p.group-member Members: seo neko
      %a.edit{href: "/groups/#{params[:group_id]}/edit"} Edit
    .chat-space
      = render @messages
    .entry-form
      = form_for [@group, @message] do |f|
        = f.text_field :content, class: 'entry-sheet', placeholder: 'type a message'
        = f.label :image, class: 'upload-label' do
          = fa_icon 'picture-o', class: 'icon'
          = f.file_field :image, class: 'hidden'
        = f.submit 'Send', class: 'send'

